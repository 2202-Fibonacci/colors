generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       Int          @id @default(autoincrement())
  email                 String    @unique
  username         String     @unique
  password          String
  points                Int           @default(0)
  stations             Station[]
}

model Station {
  id                        Int      @id @default(autoincrement())
  stopId                String
  favoritedBy        User   @relation(fields: [favoritedById], references:[id])
  favoritedById     Int
}



